# =============================================================================
# EMG C3D Analyzer - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# =============================================================================
# SUPABASE CONFIGURATION (REQUIRED)
# =============================================================================
# Get these values from your Supabase project dashboard
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# STORAGE CONFIGURATION (REQUIRED)
# =============================================================================
# Single source of truth for storage bucket name
VITE_STORAGE_BUCKET_NAME=emg_data

# =============================================================================
# API CONFIGURATION (REQUIRED)
# =============================================================================
# Backend API URL for frontend to connect to
VITE_API_BASE_URL=http://localhost:8080

# =============================================================================
# REDIS CONFIGURATION (REQUIRED)
# =============================================================================
# Redis URL for caching and session management
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# WEBHOOK CONFIGURATION (REQUIRED)
# =============================================================================
# Secret key for webhook security
WEBHOOK_SECRET=your-webhook-secret-here

# =============================================================================
# DEMO ACCOUNTS (OPTIONAL)
# =============================================================================
# Demo account credentials for testing
VITE_DEMO_ADMIN_EMAIL=admin2@ghostly.be
VITE_DEMO_ADMIN_PASSWORD=admin
