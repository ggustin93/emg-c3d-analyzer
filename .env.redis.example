# Redis Configuration for EMG C3D Analyzer
# Copy to .env and configure for your environment

# === Redis Connection Settings ===
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# === Redis Connection Pool ===
REDIS_SOCKET_TIMEOUT=5.0
REDIS_CONNECTION_POOL_SIZE=10
REDIS_RETRY_ON_TIMEOUT=true

# === Cache Configuration ===
DEFAULT_CACHE_TTL_HOURS=24
ENABLE_REDIS_COMPRESSION=true
REDIS_MAX_MEMORY_POLICY=allkeys-lru
REDIS_KEY_PREFIX=emg_c3d_analyzer

# === Production Redis Cloud (optional) ===
# REDIS_URL=rediss://username:password@redis-cloud-endpoint:port/db
# REDIS_SSL=true

# === Development Settings ===
# For local development with Docker:
# REDIS_URL=redis://redis:6379/0

# For local Redis installation:
# REDIS_URL=redis://localhost:6379/0