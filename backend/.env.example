# GHOSTLY+ Backend Environment Variables
# Copy this file to .env and update with your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Storage Configuration
STORAGE_BUCKET_NAME=c3d-examples  # Supabase storage bucket name for C3D files

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your-redis-password  # Uncomment if Redis has authentication

# Webhook Configuration
# WEBHOOK_SECRET=your-webhook-secret  # Optional: for webhook authentication

# Server Configuration
HOST=localhost
PORT=8080
LOG_LEVEL=INFO
ENVIRONMENT=development

# File Processing
ENABLE_FILE_HASH_DEDUPLICATION=true